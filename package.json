{
  "name": "inted-whatsapp-bot",
  "version": "1.0.0",
  "description": "Bot de WhatsApp para INTED con panel de control web y persistencia de datos",
  "main": "index.js",
  "author": "INTED",
  "license": "MIT",
  "keywords": [
    "whatsapp",
    "bot",
    "inted",
    "customer-service",
    "docker"
  ],
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop whatsapp-bot",
    "pm2:restart": "pm2 restart whatsapp-bot",
    "docker:build": "docker build -t inted-whatsapp-bot .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data -v $(pwd)/logs:/app/logs inted-whatsapp-bot",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:restart": "docker-compose restart"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "helmet": "^7.1.0",
    "pm2": "^5.4.3",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "validator": "^13.11.0",
    "whatsapp-web.js": "^1.26.0",
    "winston": "^3.11.0"
  }
}
